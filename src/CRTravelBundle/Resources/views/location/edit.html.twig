{% extends 'CRTravelBundle:layout:layout.html.twig' %}

{% block title %}
Location edit
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-2">
            <a href="{{ path('location_index') }}" class="btn btn-warning btn-circle"><i class="fa fa-arrow-left"></i></a>
        </div>
        <div class="col-10">
            <h1>Location edit</h1>
        </div>
    </div>

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col">
            {{ form_row(edit_form.name) }}
        </div>
    </div>

    <input type="submit" value="Edit" class="btn btn-outline-warning">
    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}
{% endblock %}
