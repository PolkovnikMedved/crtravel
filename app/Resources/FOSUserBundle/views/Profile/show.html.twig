{% extends 'CRTravelBundle:layout:layout.html.twig' %}

{% block title %}
    profile
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1>Profile</h1>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
            <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-outline-warning">EDIT</a>
            <a href="{{ path('fos_user_change_password') }}" class="btn btn-outline-danger">Change password</a>
        </div>
    </div>
{% endblock body %}
