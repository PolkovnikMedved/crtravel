{% extends 'CRTravelBundle:layout:layout.html.twig' %}

{% block title %}
    change password
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-1">
            <a href="{{ path('fos_user_profile_show') }}" class="btn btn-warning btn-circle"><i class="fa fa-arrow-left"></i></a>
        </div>
        <div class="col-10">
            <h1>Change password</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
            {{ form_widget(form) }}
            <div>
                <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-success"/>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}